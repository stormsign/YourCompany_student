<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor_common">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <EditText android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="10dp"
            android:maxLines="5"
            android:lines="5"
            android:gravity="top|left"
            android:textColor="@color/textDarktwo"
            android:textSize="14sp"
            android:hint="分享一下近况吧~"
            android:textColorHint="@color/textDarkthree"
            android:background="@drawable/bg_white_roundcorner"/>

        <FrameLayout android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp">

            <ImageView android:id="@+id/videoFrame"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:scaleType="centerCrop"/>

            <ProgressBar android:id="@+id/uploadProgress"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center" />

            <ImageView android:id="@+id/play"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ico_bofang"
                android:layout_gravity="center"/>

        </FrameLayout>

        <LinearLayout android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridView
                android:id="@+id/imageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:horizontalSpacing="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none"
                android:verticalSpacing="5dp"
                android:visibility="visible"
                android:numColumns="3"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>