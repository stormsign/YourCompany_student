<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:id="@+id/itemContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_noteacherorder_height"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView android:id="@+id/selectIcon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/ico_order_select"
            android:layout_marginRight="5dp"/>

        <TextView android:id="@+id/orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="作业辅导"
            android:textColor="@color/textOrange"
            android:layout_marginRight="10dp"/>

        <TextView android:id="@+id/beginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="上课时间"
            android:textColor="@color/textOrange"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:visibility="visible">

            <TextView android:id="@+id/teacherCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/textOrange"/>
            <TextView android:id="@+id/ren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textSize="12sp"
                android:textColor="@color/textOrange"/>

        </LinearLayout>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>