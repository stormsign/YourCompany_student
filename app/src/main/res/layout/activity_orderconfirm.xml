<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor_common"
    android:id="@+id/content">

    <ScrollView android:id="@+id/scrollview"
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ico_location"
                    android:drawableTint="@color/themeColor"
                    android:textColor="@color/textDarkone"
                    android:textSize="17sp"
                    android:id="@+id/address"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

                <EditText android:id="@+id/addressDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/textDarkthree"
                    android:textColorHint="@color/textDarkfour"
                    android:hint="请填写详细地址信息，如：X栋Y单元Z室"
                    android:paddingLeft="7dp"
                    android:paddingTop="10dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="10dp"
                    android:gravity="left|top"
                    android:background="@drawable/selector_edittetxt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:text="学生姓名"
                        android:layout_alignParentLeft="true"/>

                    <TextView android:id="@+id/studentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkthree"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:text="家长姓名"
                        android:layout_alignParentLeft="true"/>

                    <TextView android:id="@+id/parentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkthree"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="10dp"/>
                <RelativeLayout android:id="@+id/list_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/selectable_item_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:text="电　　话"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true">

                        <TextView android:id="@+id/tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkthree"
                            android:textSize="@dimen/text_orderconfirm_detail_size"
                            android:layout_marginRight="10dp" />
                        <ImageView
                            style="@style/user_info_imageview" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="10dp"/>
                <RelativeLayout android:id="@+id/list_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/selectable_item_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:text="学生年级"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true">

                        <TextView android:id="@+id/studentGrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkthree"
                            android:textSize="@dimen/text_orderconfirm_detail_size"
                            android:layout_marginRight="10dp" />
                        <ImageView
                            style="@style/user_info_imageview" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="10dp"/>
                <RelativeLayout android:id="@+id/list_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/selectable_item_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:text="科　　目"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true">

                        <TextView android:id="@+id/subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkthree"
                            android:textSize="@dimen/text_orderconfirm_detail_size"
                            android:layout_marginRight="10dp" />
                        <ImageView
                            style="@style/user_info_imageview" />
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout android:id="@+id/list_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/selectable_item_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:text="兴　　趣"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true">

                        <TextView android:id="@+id/interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkthree"
                            android:textSize="@dimen/text_orderconfirm_detail_size"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            style="@style/user_info_imageview" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginLeft="10dp"/>
                <RelativeLayout android:id="@+id/list_teacherGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/selectable_item_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_orderconfirm_detail_size"
                        android:text="老师性别"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true">

                        <TextView android:id="@+id/teacherGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkthree"
                            android:textSize="@dimen/text_orderconfirm_detail_size"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            style="@style/user_info_imageview" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textDarkone"
                android:textSize="16sp"
                android:text="备注"
                android:layout_margin="10dp"/>

            <EditText android:id="@+id/demands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:hint="输入您对老师的要求"
                android:textSize="16sp"
                android:textColor="@color/textDarkthree"
                android:textColorHint="@color/textDarkthree"
                android:padding="10dp"
                android:gravity="top|left"
                android:background="@color/white"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

    <View android:id="@+id/transparentBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:background="#55000000"/>

    <LinearLayout android:id="@+id/priceDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rectangle"
        android:orientation="vertical"
        android:layout_above="@id/bottom"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单价"
                android:textColor="@color/textDarkone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="70dp"/>

            <TextView android:id="@+id/singlePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥40"
                android:textColor="@color/textDarkone"
                android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加价"
                android:textColor="@color/textDarkone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="70dp"/>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/border_rectangle">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="15sp"
                    android:textColor="@color/textDarkone"/>
                <EditText android:id="@+id/extraPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkone"
                    android:hint="0.00"
                    android:textColorHint="@color/textDarkone"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课时"
                android:textColor="@color/textDarkone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="49dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/border_rectangle"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView android:id="@+id/cutClass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="—"
                    android:textSize="10sp"
                    android:textColor="@color/textDarkthree"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line2"/>
                <TextView android:id="@+id/classTime"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/textDarkone"
                    android:text="1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:numeric="integer"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line2"/>
                <TextView android:id="@+id/addClass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="10sp"
                    android:textColor="@color/textDarkthree"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_rectangle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp">

            <ImageView android:id="@+id/pointer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/totalClassTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textDarkthree"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textColor="@color/textDarkthree"
                android:textSize="13sp"
                android:layout_marginLeft="12dp"/>

            <TextView android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textColor="@color/textDarkone"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/textDarkthree"
                android:textSize="13sp"/>

        </LinearLayout>

        <TextView android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认订单"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            android:background="@drawable/selector_orange_button_rectangle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </RelativeLayout>

</RelativeLayout>