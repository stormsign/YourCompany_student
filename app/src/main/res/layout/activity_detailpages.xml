<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.ui.activity.DetailpagesActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="1dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.miuhouse.yourcompany.student.view.widget.CircularImageViewHome
                        android:id="@+id/img_avatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="?attr/actionBarSize"
                        circular:border_color="@color/white"
                        circular:border_width="2dip"
                        circular:shadow="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkone"
                            android:textSize="@dimen/text_15" />

                        <ImageView
                            android:id="@+id/img_gender"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:lines="2"
                        android:textColor="@color/textDarktwo"
                        android:textSize="@dimen/text_14" />


                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:id="@+id/following_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:paddingLeft="20.0dip"
                            android:paddingRight="20.0dip"
                            android:paddingTop="10.0dip">

                            <TextView
                                android:id="@+id/tv_education"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/textDarkone"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/tv_grade"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/textDarkone"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/tv_college"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/textDarkone"
                                android:textSize="@dimen/text_14" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/fan_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:paddingLeft="20.0dip"
                            android:paddingRight="20.0dip"
                            android:paddingTop="7.0dip">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="学历"
                                android:textColor="@color/textDarkthree"
                                android:textSize="@dimen/text_13" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="年级"
                                android:textColor="@color/textDarkthree"
                                android:textSize="@dimen/text_13" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="院校"
                                android:textColor="@color/textDarkthree"
                                android:textSize="@dimen/text_13" />
                        </TableRow>
                    </TableLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_check_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:drawableLeft="@mipmap/lszl_ico_renzh"
                            android:drawablePadding="5dp"
                            android:text="身份认证"
                            android:textColor="@color/textDarktwo"
                            android:textSize="@dimen/text_14"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_education_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:drawableLeft="@mipmap/lszl_ico_renzh"
                            android:drawablePadding="5dp"
                            android:text="学历认证"
                            android:textColor="@color/textDarktwo"
                            android:textSize="@dimen/text_14"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_profession_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:drawableLeft="@mipmap/lszl_ico_renzh"
                            android:drawablePadding="5dp"
                            android:text="资质认证"
                            android:textColor="@color/textDarktwo"
                            android:textSize="@dimen/text_14"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/framelayout_photo_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selectable_item_background">

                    <TextView
                        android:id="@+id/tv_photo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingBottom="12.5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="12.5dp"
                        android:paddingTop="12.5dp"
                        android:text="相册"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:text="更多"
                        android:textColor="@color/themeColor"
                        android:textSize="@dimen/text_14" />
                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_photo_album"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/white" />

                <FrameLayout
                    android:id="@+id/framelayout_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/selectable_item_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingBottom="12.5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="12.5dp"
                        android:paddingTop="12.5dp"
                        android:text="评价"
                        android:textColor="@color/textDarkone"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:text="全部评价"
                        android:textColor="@color/themeColor"
                        android:textSize="@dimen/text_14" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linear_not_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_not_comment"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:text="暂无评论"
                        android:textColor="@color/background_material_dark" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <com.miuhouse.yourcompany.student.view.widget.CircularImageViewHome
                    android:id="@+id/iv_logo_portrait"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_logo_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/text_black"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:text="老师详情"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_18"
                    android:visibility="visible" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <!--<FrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior">-->


    <com.miuhouse.yourcompany.student.view.widget.RecyclerRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.miuhouse.yourcompany.student.view.widget.RecyclerRefreshLayout>

</android.support.design.widget.CoordinatorLayout>