<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:id="@+id/ly_share_weichat"
        style="@style/dialog_content_share_ll">

      <TextView
          style="@style/dialog_content_share_text"
          android:drawableTop="@drawable/btn_bottom_share_weixin"
          android:text="微信好友"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_share_qq"
        style="@style/dialog_content_share_ll">

      <TextView
          style="@style/dialog_content_share_text"
          android:drawableTop="@drawable/btn_bottom_share_qq"
          android:text="QQ好友"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_share_weichat_circle"
        style="@style/dialog_content_share_ll">

      <TextView
          style="@style/dialog_content_share_text"
          android:drawableTop="@drawable/btn_bottom_share_weixincircle"
          android:text="微信朋友圈"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ly_share_message"
        style="@style/dialog_content_share_ll">

      <TextView
          style="@style/dialog_content_share_text"
          android:drawableTop="@drawable/btn_bottom_share_sms"
          android:text="短信"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_share_email"
        style="@style/dialog_content_share_ll">

      <TextView
          style="@style/dialog_content_share_text"
          android:drawableTop="@drawable/btn_bottom_share_email"
          android:text="邮件"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_share_sina_weibo"
        style="@style/dialog_content_share_ll"
        android:visibility="invisible">

      <TextView
          style="@style/dialog_content_share_text"
          android:text="新浪微博"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>